@model IEnumerable<Assignment2.Models.crewGrid>
@{
    WebGrid grid = new WebGrid(Model);
    ViewBag.Title = "Flight Cabin Crew Assignments";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>

            </hgroup>
            <p>

                @grid.GetHtml(rowStyle: "oddrow", columns: grid.Columns(
                    grid.Column("name", "Staff Name"),
                    grid.Column("flightDay", "Flight Day"),
                    grid.Column("fromAirport", "From"),
                    grid.Column("toAirport", "To"),
                    grid.Column("aircraftModel", "Aircraft Model"),
                    grid.Column("startDate", "Starting Date", format: (item) => String.Format("{0:yyyy-MM-dd}", item.startDate)),
                    grid.Column(header: "Delete Record", format: (item) => Html.ActionLink("Delete", "DeleteCrewFlight", new { cId = item.crewId, fId = item.flightId }), style: "delcol")
                ))
 
            </p>
        </div>
    </section>
}
<h3>More Features</h3>
<ol class="round">
    <li class="one">
        <h5>@Html.ActionLink("New Staff Assignment", "newCabinAssignment")</h5>
        @Html.ActionLink("Assign a staff member to a new flight", "newCabinAssignment")
    </li>

    <li class="two">
        <h5>@Html.ActionLink("Personnel Qualifications", "QualificationCrew")</h5>
        @Html.ActionLink("View Personnel Qualifications", "QualificationCrew")
    </li>
</ol>
